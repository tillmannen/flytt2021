@page "/boxowners/add"
@attribute [Authorize]

@using flytt2021.Data.Services
@using flytt2021.Data.Entities
@using flytt2021.Data.Database

@inject NavigationManager NavigationManager
@inject MoveService service
@inject UserService UserService

<h3>AddBoxOwner</h3>

<EditForm Model="boxOwner" OnValidSubmit="SaveBoxOwner">
    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label for="name" class="form-control">Namn</label>
                <InputText @bind-Value="@boxOwner.Name" class="form-control"></InputText>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Spara" />
            </div>
        </div>
    </div>
</EditForm>

@code {

    [CascadingParameter] protected Task<AuthenticationState> AuthStat { get; set; }

    private BoxOwner boxOwner = new BoxOwner();
    private FlyttUser currentUser;

    protected override async Task OnInitializedAsync()
    {
        var user = (await AuthStat).User;
        var userid = user.Identity.Name;

        currentUser = UserService.GetUser(userid);
    }

    private async void SaveBoxOwner()
    {
        await service.AddBoxOwnerAsync(boxOwner);
        NavigationManager.NavigateTo("/index");
    }
}
